{
    "openapi": "3.0.0",
    "info": {
        "title": "Solsteinn API",
        "version": "1.0.0",
        "description": "Documentación completa de la API de Solsteinn"
    },
    "servers": [
        {
            "url": "http://localhost:3001/api/v1"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "username": { "type": "string" },
                    "email": { "type": "string" },
                    "password": { "type": "string" },
                    "role": { "type": "array", "items": { "type": "string" } },
                    "estado": { "type": "boolean" }
                }
            },
            "Client": {
                "type": "object",
                "properties": {
                    "nombre": { "type": "string" },
                    "apellido": { "type": "string" },
                    "cuitCuil": { "type": "string" },
                    "domicilio": { "type": "string" },
                    "telefono": { "type": "string" },
                    "email": { "type": "string" },
                    "iva": { "type": "string" },
                    "localidad": { "type": "string" },
                    "provincia": { "type": "string" }
                }
            },
            "Sucursal": {
                "type": "object",
                "properties": {
                    "nombre": { "type": "string" },
                    "direccion": { "type": "string" },
                    "telefono": { "type": "string" },
                    "organizacion": { "type": "string" }
                }
            },
            "Kit": {
                "type": "object",
                "properties": {
                    "nombre": { "type": "string" },
                    "descripcion": { "type": "string" },
                    "productos": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "producto": { "type": "string" },
                                "cantidad": { "type": "number" }
                            }
                        }
                    },
                    "precio": { "type": "number" }
                }
            },
            "ProductSucursal": {
                "type": "object",
                "properties": {
                    "idSucursal": { "type": "string" },
                    "cantidad": { "type": "integer" }
                }
            },
            "Product": {
                "type": "object",
                "properties": {
                    "codigo": { "type": "string" },
                    "nombre": { "type": "string" },
                    "descripcion": { "type": "string" },
                    "stock": { "type": "integer" },
                    "precioLista": { "type": "number" },
                    "precioVenta": { "type": "number" },
                    "poseeIva": { "type": "boolean" },
                    "iva": { "type": "number" },
                    "categoria": { "type": "string" },
                    "marca": { "type": "string" },
                    "organizacion": { "type": "string" },
                    "sucursales": {
                        "type": "array",
                        "items": { "$ref": "#/components/schemas/ProductSucursal" }
                    }
                }
            },
            "dailyCash": {
                "type": "object",
                "properties": {
                    "fecha": { "type": "string", "format": "date-time" },
                    "montoInicial": { "type": "number" },
                    "montoFinal": { "type": "number" },
                    "estado": { "type": "boolean" },
                    "idSucursal": { "type": "string" }
                }
            },
            "ClientInvoiceItem": {
                "type": "object",
                "properties": {
                    "codigo": { "type": "string" },
                    "cantidad": { "type": "number" },
                    "kit": { "type": "string" }
                }
            },
            "ClientInvoice": {
                "type": "object",
                "properties": {
                    "puntoVenta": { "type": "string" },
                    "numeroFactura": { "type": "string" },
                    "detalles": { "type": "string" },
                    "descuento": { "type": "number" },
                    "organizacion": { "type": "string" },
                    "recargo": { "type": "number" },
                    "subtotal": { "type": "number" },
                    "total": { "type": "number" },
                    "tipoFactura": { "type": "string" },
                    "metodosDePago": { "type": "array", "items": { "type": "string" } },
                    "condicionIva": { "type": "string" },
                    "items": {
                        "type": "array",
                        "items": { "$ref": "#/components/schemas/ClientInvoiceItem" }
                    },
                    "idProductos": { "type": "array", "items": { "type": "string" } },
                    "fecha": { "type": "string", "format": "date-time" },
                    "fechaPago": { "type": "string", "format": "date-time" },
                    "cantidadTotal": { "type": "number" },
                    "estado": { "type": "boolean" },
                    "caja": { "type": "string" },
                    "cuitCuil": { "type": "string" },
                    "domicilio": { "type": "string" },
                    "localidad": { "type": "string" },
                    "provincia": { "type": "string" },
                    "telefono": { "type": "string" },
                    "idSucursal": { "type": "string" },
                    "usuario": { "type": "string" },
                    "cliente": { "type": "string" }
                }
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "summary": "Login de usuario",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": { "type": "string" },
                                    "password": { "type": "string" }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": { "type": "string" }
                                    }
                                }
                            }
                        }
                    },
                    "400": { "description": "Error de validación" }
                }
            }
        },
